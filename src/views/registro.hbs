<div class="jumbotron">
    <h2 style="color: blue;">Registro de Usuario</h2>
    <br>
    <form action="/registro" method="post">
        <div class="form-group">
            <label for="name"><b>Ingrese Nombre</b></label>
            <input id="name" class="form-control" type="text" name="name" required>
        </div>
        <div class="form-group">
            <label for="lastname"><b>Ingrese Apellido</b></label>
            <input id="lastname" class="form-control" type="text" name="lastname" required>
        </div>
        <div class="form-group">
            <label for="address"><b>Ingrese Direccion</b></label>
            <input id="address" class="form-control" type="text" name="address" required>
        </div>
        <div class="form-group">
            <label for="number"><b>Ingrese Numero de Telefono</b></label>
            <input id="number" class="form-control" type="number" name="number" required>
        </div>
        <div class="form-group">
            <label for="username"><b>Ingrese Email</b></label>
            <input id="username" class="form-control" type="email" name="username" required>
        </div>
        <div class="form-group">
            <label for="password"><b>Ingrese Password</b></label>
            <input id="password" class="form-control" type="password" name="password" required>
        </div>
        <button class="btn btn-success mt-3 mb-5" type="submit">Registrar</button>
    </form>

    <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/login'">Ir a Login</button>
    </div>

</div>